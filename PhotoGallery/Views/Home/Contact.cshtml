
@{
    ViewData["Title"] = "Contact";
}

<header id="header-other">
    <div class="container">
    </div>
</header>



<div class="container section-title">
    <h2 class="text-center mt-5 pb-5">CONTACT US</h2>
</div>



<div class="container contact-us-page">
    <!-- ROW 1 -->
    <div class="row">
        <div class="col-lg-6 contact-info">
            <div class="card-body mt-4 ml-4 mr-2">

                <h3 class="font-weight-bold  pb-5 pt-1 text-center">Reach us here...</h3>
                <ul class="text-lg-left list-unstyled contact-info-inner">
                    <li>
                        <p>
                            <i class="fas fa-map-marker-alt pr-2"></i>Skomaskinsgatan 2, 702 27 Örebro,
                            Sweden
                        </p>

                    </li>
                    <li>
                        <p><i class="fas fa-phone pr-2"></i>+ 01 234 567 89</p>
                    </li>
                    <li>
                        <p><i class="fas fa-envelope pr-2"></i>info@xyz-gallery.com</p>
                    </li>
                </ul>
                <hr class="hr-light my-4">
                <ul class="list-inline text-center list-unstyled pt-4">
                    <li class="list-inline-item">
                        <a href="https://twitter.com/" class="p-2 fa-lg tw-ic">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://www.linkedin.com/" class="p-2 fa-lg li-ic">
                            <i class="fab fa-linkedin-in"> </i>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://www.instagram.com/" class="p-2 fa-lg ins-ic">
                            <i class="fab fa-instagram"> </i>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://www.facebook.com/" class="p-2 fa-lg ins-ic">
                            <i class="fab fa-facebook-f"> </i>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://www.youtube.com/" class="p-2 fa-lg ins-ic">
                            <i class="fab fa-youtube"> </i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-lg-6 z-depth-1">
            <!--Grid column 2: GOOGLE MAP-->
            <div class="">
                <!-- google map -->
                <div class="z-depth-1 map-container">
                    <iframe src="https://maps.google.com/maps?q=Skomaskinsgatan+2,+702+27+Örebro&t=&z=13&ie=UTF8&iwloc=&output=embed"
                            frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
    <!-- ROW 2 -->
    <div class="row">
        <div class="col-lg-6 contact-bg-photo">
            <!-- Grid column 1: Photo-->
            <div class="">
                <p class="">XYZ Gallery</p>
            </div>
        </div>

        <div class="col-lg-6">

            <!-- Grid column 2: Contact Form -->
            <div class="card-body form">

                <!-- Header -->
                <h3 class="font-weight-bold dark-grey-text mt-4 pl-3 text-center">... or just drop us a line:</h3>

                <!-- Grid row -->
                <div class="row pl-3 mt-4">

                    <!-- Grid column -->
                    <div class="col-md-6 mb-3">
                        <div class="md-form mb-0">
                            <label for="form-contact-name" class="">Your name</label>
                            <input type="text" id="form-contact-name" class="form-control">

                        </div>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="form-contact-email" class="">Your email</label>
                            <input type="text" id="form-contact-email" class="form-control">
                        </div>
                    </div>
                    <!-- Grid column -->

                </div>
                <!-- Grid row -->
                <!-- Grid row -->
                <div class="row pl-3">

                    <!-- Grid column -->
                    <div class="col-md-12">
                        <div class="md-form mb-0 ">
                            <label for="form-contact-message">Your message</label>
                            <textarea id="form-contact-message" class="form-control md-textarea"
                                      rows="5"></textarea>

                            <div class="form-group">
                                <button type="submit" class="control-btn mb-2">Send</button>
                            </div>
                        </div>
                    </div>
                    <!-- Grid column -->

                </div>
                <!-- Grid row -->

            </div>
        </div>
    </div>
</div>